<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#111111">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- IMAGEN PRINCIPAL -->
        <ImageView
            android:id="@+id/imgUrnaMainClient"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:background="#222"
            android:layout_marginBottom="12dp"/>

        <!-- MINIATURAS (RecyclerView Horizontal) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerUrnaImagesClient"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            />

        <!-- NOMBRE -->
        <TextView
            android:id="@+id/txtUrnaNameClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la Urna"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp" />

        <!-- PRECIO -->
        <TextView
            android:id="@+id/txtUrnaPriceClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.000"
            android:textSize="18sp"
            android:textColor="#FFD37B"
            android:textStyle="bold"
            android:layout_marginTop="6dp" />

        <!-- MATERIAL -->
        <TextView
            android:id="@+id/txtUrnaMaterialClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Material: -"
            android:textColor="#CCCCCC"
            android:layout_marginTop="10dp" />

        <!-- COLOR -->
        <TextView
            android:id="@+id/txtUrnaColorClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color: -"
            android:textColor="#CCCCCC"
            android:layout_marginTop="6dp" />

        <!-- CAPACIDAD -->
        <TextView
            android:id="@+id/txtUrnaCapacityClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacidad: -"
            android:textColor="#CCCCCC"
            android:layout_marginTop="6dp" />

        <!-- DESCRIPCIÓN -->
        <TextView
            android:id="@+id/txtUrnaDescriptionClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción..."
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

        <!-- BOTÓN -->
        <Button
            android:id="@+id/btnAddToCartClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGREGAR AL CARRITO"
            android:textStyle="bold"
            android:textColor="#000"
            android:backgroundTint="#FFD37B"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
