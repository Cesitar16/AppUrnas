<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login_app"
    tools:context=".ui.EditUrnaActivity">

    <!-- Fondo oscuro semi-transparente -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Urna"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <ImageView
                android:id="@+id/ivUrnaImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="#44FFFFFF"
                tools:src="@tools:sample/backgrounds/scenic"/>

            <Button
                android:id="@+id/btnChangeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar Imagen"
                android:layout_marginBottom="24dp"
                app:backgroundTint="#80FFFFFF"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/etUrnaName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre de la urna"
                android:textColor="@android:color/white"
                android:textColorHint="#AAA"
                android:backgroundTint="#80FFFFFF"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción corta"
                android:textColor="@android:color/white"
                android:textColorHint="#AAA"
                android:backgroundTint="#80FFFFFF"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etDetailedDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lines="3"
                android:hint="Descripción detallada"
                android:textColor="@android:color/white"
                android:textColorHint="#AAA"
                android:backgroundTint="#80FFFFFF"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Precio"
                android:textColor="@android:color/white"
                android:textColorHint="#AAA"
                android:backgroundTint="#80FFFFFF"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Stock"
                android:textColor="@android:color/white"
                android:textColorHint="#AAA"
                android:backgroundTint="#80FFFFFF"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Cambios"
                android:textColor="@android:color/white"
                app:backgroundTint="#C9A46A"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
