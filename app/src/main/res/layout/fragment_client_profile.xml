<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/black">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/txtProfileTitleClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Perfil"
        android:textSize="22sp"
        android:textColor="@color/colorAccentGold"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- EMAIL DEL USUARIO -->
    <TextView
        android:id="@+id/txtUserEmailClient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Correo: "
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtProfileTitleClient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTÓN CERRAR SESIÓN -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogoutClient"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Cerrar sesión"
        android:textColor="@color/black"
        android:backgroundTint="@color/colorAccentGold"

        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:cornerRadius="14dp"
        app:layout_constraintTop_toBottomOf="@id/txtUserEmailClient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
