<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/black"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen principal -->
        <ImageView
            android:id="@+id/imageUrna"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen de urna"
            android:background="#1A000000"
            android:layout_marginBottom="12dp" />

        <!-- Carrusel horizontal -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewImages"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Sección de información principal -->
        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#202020"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="6dp"
            android:clipToOutline="true"
            android:backgroundTint="#221D19">

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombreUrna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urna Ejemplar"
                android:textColor="#E6D6B1"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Medidas -->
            <TextView
                android:id="@+id/tvMedidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ancho: 0 cm | Profundidad: 0 cm | Alto: 0 cm"
                android:textColor="#D6C7A1"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Descripción corta -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción corta"
                android:textColor="#E6D6B1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDescripcionCorta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#D6C7A1"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <!-- Descripción larga -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción detallada"
                android:textColor="#E6D6B1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDescripcionLarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#C5B89B"
                android:textSize="15sp"
                android:layout_marginBottom="16dp" />

            <!-- Detalles técnicos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPeso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso: 0.0 kg"
                    android:textColor="#D6C7A1"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock: 0"
                    android:textColor="#D6C7A1"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDisponible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disponible: Sí"
                    android:textColor="#D6C7A1"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio: $0.00"
                    android:textColor="#D6C7A1"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color ID: -"
                    android:textColor="#D6C7A1"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material ID: -"
                    android:textColor="#D6C7A1"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botones inferiores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EDITAR"
                android:backgroundTint="#B48A60"
                android:textColor="#FFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ELIMINAR URNA"
                android:backgroundTint="#8B3A3A"
                android:textColor="#FFF" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
