<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black">

    <!-- Título -->
    <TextView
        android:id="@+id/txtOrdersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Órdenes Pendientes"
        android:textSize="22sp"
        android:textColor="@color/colorAccentGold"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Recycler (ID CORREGIDO) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrdersAdmin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtOrdersTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress -->
    <ProgressBar
        android:id="@+id/progressBarOrders"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rvOrdersAdmin"
        app:layout_constraintBottom_toBottomOf="@id/rvOrdersAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Empty message -->
    <TextView
        android:id="@+id/txtEmptyOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay órdenes pendientes"
        android:textColor="@color/colorAccentGold"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rvOrdersAdmin"
        app:layout_constraintBottom_toBottomOf="@id/rvOrdersAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
