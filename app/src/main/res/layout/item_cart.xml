<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imgCartItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCartItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre de urna"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imgCartItem"
        app:layout_constraintTop_toTopOf="@id/imgCartItem"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtCartItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad: 1"
        app:layout_constraintStart_toStartOf="@id/txtCartItemName"
        app:layout_constraintTop_toBottomOf="@id/txtCartItemName" />

    <TextView
        android:id="@+id/txtCartItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$120.000"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txtCartItemName"
        app:layout_constraintTop_toBottomOf="@id/txtCartItemQuantity" />

</androidx.constraintlayout.widget.ConstraintLayout>
