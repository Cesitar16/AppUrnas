<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/card_background_dark"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/txtOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orden #1"
        android:textColor="@color/colorAccentGold"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtOrderUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario: 1"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/txtOrderTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $120.000"
        android:textColor="@android:color/white"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/txtOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: PENDING"
        android:textColor="@android:color/white"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnRejectOrder"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Rechazar"
            android:textStyle="bold"
            android:backgroundTint="@color/colorAccentGold"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnAcceptOrder"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Aceptar"
            android:textStyle="bold"
            android:backgroundTint="@color/colorAccentGold"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</LinearLayout>
