<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login_app"
    tools:context=".ui.HomeActivity">

    <!-- Fondo oscuro semi-transparente -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000" />

    <!-- Contenedor con scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/mainContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Encabezado superior -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DESCANSOS DEL"
                    android:textColor="@color/colorTextLight"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_email"
                        app:tint="@color/colorTextLight"
                        android:layout_marginEnd="16dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Botón Nueva Urna -->

            <!-- Título Dashboard -->

            <Button
                android:id="@+id/btnNuevaUrna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="+ Nueva Urna"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="#C9A46A" />

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="#C9A46A" />

            <TextView
                android:id="@+id/txtGestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard de Urnas"
                android:textColor="@color/colorTextLight"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Tarjetas métricas dinámicas -->

            <LinearLayout
                android:id="@+id/dashboardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="4"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"/>

            <!-- Campo de búsqueda -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:background="#1AFFFFFF"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="@color/colorTextLight"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/inputBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Buscar urnas por nombre o ID interno"
                    android:background="@null"
                    android:textColor="@color/colorTextLight"
                    android:textColorHint="#AAA"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Lista de urnas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewUrnas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
