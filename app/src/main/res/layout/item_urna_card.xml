<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#1AFFFFFF"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:clipToOutline="true"
    android:gravity="center_vertical">

    <!-- Imagen de la urna -->
    <ImageView
        android:id="@+id/imgUrna"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:src="@drawable/fondo_login_app"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name" />

    <!-- Información de la urna -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombreUrna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urna Clásica"
            android:textColor="@color/colorTextLight"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrecioUrna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$250"
            android:textColor="@color/colorTextLight"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtStockUrna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock: 15"
            android:textColor="#6EE7B7"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Ícono de acciones -->
    <ImageView
        android:id="@+id/btnOpcionesUrna"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_manage"
        app:tint="@color/colorTextLight"
        android:contentDescription="Opciones" />
</LinearLayout>
