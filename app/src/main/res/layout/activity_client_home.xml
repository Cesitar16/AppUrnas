<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- CONTENEDOR DE FRAGMENTS -->
    <FrameLayout
        android:id="@+id/clientFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp" />

    <!-- BOTTOM NAVIGATION PARA CLIENTE -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavClient"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:background="@color/grayDark"
        app:itemIconTint="@color/bottom_nav_item_color_selector"
        app:itemTextColor="@color/bottom_nav_item_color_selector"
        app:menu="@menu/bottom_nav_menu_client" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
