<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000"
    tools:context=".ui.fragments.EditUrnaFragment"> <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:paddingBottom="?attr/actionBarSize" android:clipToPadding="false"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Urna"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextLight"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/ivUrnaImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_image_border"
            android:scaleType="centerCrop"
            android:contentDescription="Vista previa de imagen principal" />

        <Button
            android:id="@+id/btnSelectImage"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cambiar Imagen Principal"
            android:textColor="@color/colorAccentGold"
            android:layout_marginBottom="8dp" /> <Button
        android:id="@+id/btnAddGalleryImage"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Añadir Imagen a Galería"
        android:textColor="@color/colorAccent"
        app:strokeColor="@color/colorAccent"
        android:layout_marginBottom="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la Urna"
            app:boxBackgroundColor="#1AFFFFFF"
            app:hintTextColor="#AAA"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextLight"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Precio"
                android:layout_marginEnd="4dp"
                app:boxBackgroundColor="#1AFFFFFF"
                app:hintTextColor="#AAA"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextLight"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Stock"
                android:layout_marginStart="4dp"
                app:boxBackgroundColor="#1AFFFFFF"
                app:hintTextColor="#AAA"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextLight"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilShortDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Descripción Corta"
            app:boxBackgroundColor="#1AFFFFFF"
            app:hintTextColor="#AAA"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextLight"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDetailedDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Descripción Detallada"
            app:boxBackgroundColor="#1AFFFFFF"
            app:hintTextColor="#AAA"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDetailedDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="3"
                android:gravity="top"
                android:textColor="@color/colorTextLight"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Color" android:textColor="#AAA" android:layout_marginTop="16dp"/>
        <Spinner
            android:id="@+id/spinner_color" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/colorTextLight"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Material" android:textColor="#AAA" android:layout_marginTop="8dp"/>
        <Spinner
            android:id="@+id/spinner_material" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/colorTextLight"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Modelo" android:textColor="#AAA" android:layout_marginTop="8dp"/>
        <Spinner
            android:id="@+id/spinner_model" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorTextLight"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_available" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disponible para la venta"
            android:textColor="@color/colorTextLight"
            android:checked="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cambios"
            app:backgroundTint="@color/colorAccentGold"
            android:textColor="@android:color/black"
            android:paddingVertical="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnDeleteUrna"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Urna"
            android:textColor="@android:color/holo_red_light"
            app:strokeColor="@android:color/holo_red_light"
            android:layout_marginBottom="16dp"/>


    </LinearLayout>
</ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>